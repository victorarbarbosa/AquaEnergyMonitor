        max-width: 800px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    .back-button {
        background: none;
        border: none;
        color: #007bff;
        font-size: 16px;
        cursor: pointer;
        margin-bottom: 20px;
        transition: color 0.3s;
    }

    .back-button:hover {
        color: #0056b3;
    }

    h1 {
        color: #2e7d32;
        font-size: 2.2rem;
        margin-bottom: 20px;
        margin-top: 20px;
    }

    h2 {
        margin-top: 30px;
        color: #333;
        font-size: 1.5rem;
        border-left: 4px solid #388e3c;
        padding-left: 10px;
