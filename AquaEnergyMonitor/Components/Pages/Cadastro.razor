@page "/cadastro"
@using System.ComponentModel.DataAnnotations

<div class="page-background">
    <div class="form-container">
        <h2 class="form-title">Cadastro de Usuário</h2>

        <div class="form-grid">
            <input class="form-control" placeholder="Nome" />
            <input class="form-control" placeholder="Sobrenome" />

            <input class="form-control form-grid-full" placeholder="E-mail" />
            <input class="form-control" placeholder="Senha" />
            <input class="form-control" placeholder="Confirmar Senha" />

            <input class="form-control form-grid-full" placeholder="Endereço (Rua e Número)" />

            <input class="form-control" placeholder="Cidade" />
            <input class="form-control" placeholder="Estado" />

            <input class="form-control form-grid-full" placeholder="CEP" />
        </div>

        <div class="form-group">
            <label>Tipo de Perfil:</label><br />
            <input type="radio" id="residencial" name="perfil" value="0" />
            <label for="residencial">Residencial</label>
            <input type="radio" id="organizacional" name="perfil" value="1" />
            <label for="organizacional">Organizacional</label>
        </div>

        <input class="form-control form-group" placeholder="0" />

        <button class="btn btn-primary w-100 mt-3">Cadastrar</button>

        <div class="text-center mt-3">
            <span>Já tem uma conta?</span>
            <a href="/login" class="btn btn-outline-secondary btn-sm ms-2">Login</a>
        </div>
    </div>
</div>

